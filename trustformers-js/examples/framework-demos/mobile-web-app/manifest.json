      "src": "./icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Chat",
      "short_name": "Chat",
      "description": "Start a new AI conversation",
      "url": "./?tab=chat",
      "icons": [
        {
          "src": "./icons/chat-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Text Analyzer",
      "short_name": "Analyzer",
      "description": "Analyze text sentiment and keywords",
      "url": "./?tab=analyzer",
      "icons": [
        {
          "src": "./icons/analyzer-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voice Assistant",
      "short_name": "Voice",
      "description": "Use voice commands and speech recognition",
      "url": "./?tab=voice",
      "icons": [
        {
          "src": "./icons/voice-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Camera Analysis",
      "short_name": "Camera",
      "description": "Analyze images with computer vision",
      "url": "./?tab=camera",
      "icons": [
        {
          "src": "./icons/camera-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://trustformers.dev"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+trustformers",
      "url": "./?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "./?file-handler",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "./?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "text/plain",
            "image/*"
          ]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "screenshots": [
    {
      "src": "./screenshots/mobile-chat.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "AI Chat Interface"
    },
    {
      "src": "./screenshots/mobile-analyzer.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Text Analysis Features"
    },
    {
      "src": "./screenshots/mobile-voice.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Voice Assistant"
    },
    {
      "src": "./screenshots/mobile-camera.png",
      "sizes": "540x720",
      "type": "image/png",
      "platform": "narrow",
      "label": "Camera Analysis"
    },
    {
      "src": "./screenshots/desktop-overview.png",
      "sizes": "1280x800",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop View"
    }
  ],
  "permissions": [
    "camera",
    "microphone",
    "notifications",
    "storage-access"
  ],
  "features": [
    "cross-origin-isolated"
  ],
  "handle_links": "preferred"
}