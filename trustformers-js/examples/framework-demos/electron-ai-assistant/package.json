{
  "name": "trustformers-electron-ai-assistant",
  "version": "1.0.0",
  "description": "Cross-platform desktop AI assistant powered by TrustformeRS and Electron",
  "main": "src/main.js",
  "homepage": "./",
  "author": "TrustformeRS Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "build:all": "npm run build:renderer && electron-builder --mac --win --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "clean": "rimraf dist build"
  },
  "dependencies": {
    "@trustformers/js": "file:../../..",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "marked": "^11.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "eslint": "^8.56.0"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "com.trustformers.ai-assistant",
    "productName": "TrustformeRS AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "ai",
    "assistant",
    "trustformers",
    "machine-learning",
    "nlp",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/trustformers/trustformers-js.git",
    "directory": "examples/framework-demos/electron-ai-assistant"
  }
}