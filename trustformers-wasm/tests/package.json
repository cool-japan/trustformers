{
  "name": "trustformers-wasm-tests",
  "version": "1.0.0",
  "description": "Cross-browser test suite for TrustformeRS WASM",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:chrome": "npm run test -- --testNamePattern='Chrome'",
    "test:firefox": "npm run test -- --testNamePattern='Firefox'",
    "test:safari": "npm run test -- --testNamePattern='Safari'",
    "test:edge": "npm run test -- --testNamePattern='Edge'",
    "test:cross-browser": "playwright test",
    "test:headless": "npm run test -- --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "npm run test -- --testNamePattern='Performance'",
    "test:compatibility": "npm run test -- --testNamePattern='Compatibility'",
    "serve": "http-server . -p 8080 -c-1",
    "build-wasm": "wasm-pack build --target web --out-dir pkg",
    "lint": "eslint tests/**/*.js",
    "lint:fix": "eslint tests/**/*.js --fix"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "wasm-pack": "^0.12.1"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "node-fetch": "^3.3.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/cross_browser_test_suite.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/setup.js",
      "!tests/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "js",
      "mjs",
      "json",
      "wasm"
    ],
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "__WASM_SUPPORT__": true,
      "__WEBGPU_SUPPORT__": false
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}